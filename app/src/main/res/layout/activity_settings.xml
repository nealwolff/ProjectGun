<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.we00401.guntest2.settings">

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnLogOut" />

    <CheckBox
        android:text="Gun Broker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/checkGunbroker"
        android:checked="true" />

    <CheckBox
        android:text="The AK Files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkAKfiles"
        android:layout_below="@+id/checkGunbroker"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <CheckBox
        android:text="Armslist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkArmslist"
        android:layout_below="@+id/checkAKfiles"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <CheckBox
        android:text="calguns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkCal"
        android:layout_below="@+id/checkArmslist"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <CheckBox
        android:text="The FAL Files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkFAL"
        android:layout_below="@+id/checkGunsA"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <CheckBox
        android:text="Guns America"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkGunsA"
        android:checked="true"
        android:layout_below="@+id/checkCal"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="What Websites to search?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_below="@+id/checkBox8"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Search exact term?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox8"
        android:layout_marginTop="17dp"
        android:checked="false"
        android:layout_below="@+id/btnLogOut"
        android:layout_alignParentStart="true" />
</RelativeLayout>
